legacyScopeName: 'text.tex.bibtex'  # API changed; this is no longer needed
scopeName: 'text.tex.bibtex'

fileTypes: ['bib']

firstLineMatch: '[^(bibtex)]'

id: 'biber' # API changed; this is no longer needed

name: 'Tree Biber'

type: 'tree-sitter'

parser: 'tree-sitter-biber'

folds: [
  {
    type: 'comment'
  }
  {
    type: 'junk'
  }
]

comments:
  start: '% '

scopes:
  'program': 'text.tex.bibtex'
  'junk': 'comment.inline'
  'comment': 'comment.inline'
  'comment_command': 'comment.block'

  '"@"': 'constant'

  'entry > name': 'constant'
  'entry > key': 'keyword'

  'string': 'string'
  'nonnegative_integer': 'constant.numeric'
  'identifier': 'variable.other.identifier'
